// page source ---->>>> https://leetcode.com/problems/populating-next-right-pointers-in-each-node-ii/




class Solution {
    public Node connect(Node root) {
        Node curr = root;
        Node head = null;
        Node tail = null;
        
        while(curr != null){
            
            while(curr != null){
                if(curr.left != null){
                    if(head == null){
                        head = curr.left;
                        tail = curr.left;
                    }else{
                        tail.next = curr.left;
                        tail = curr.left;
                    }    
                }
                if(curr.right != null){
                    if(head == null){
                        head = curr.right;
                        tail = curr.right;
                    }else{
                        tail.next = curr.right;
                        tail = curr.right;
                    }
                }
                curr = curr.next; 
            }
            
            curr = head;
            head = null;
            tail = null;
        }
        return root;
    }
}
