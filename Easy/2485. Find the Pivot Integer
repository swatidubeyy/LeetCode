class Solution {
    public int getSum(int i, int j){
        int sum = 0;
        for(; i <= j; i++){
            sum = sum + i;
        }
        return sum;
    }

    public int pivotInteger(int n) {
        for(int i = 1 ; i <= n ; i++){
            int gfh = getSum(1, i);
            int gsh = getSum(i, n);
            if(gfh == gsh){
                return i;
            }
        }
        return -1;
    }
}
